; ------------ Uninstall Distros Macro -------------- 

!macro Uninstall_Distros  
; New Methods catch-all
 ${If} $DistroName != ""  
  ${DeleteMenuEntry} "$BootDir\01\menu\$Config2Use" "#[ $DistroName" "#] $DistroName" ; கட்டமைப்பு கோப்பிலிருந்து உள்ளீட்டை அகற்று... I.E. linux.cfg, system.cfg, etc
  ${DeleteMenuEntry} "$BootDir\boot\வி_நி_இ\துவக்கஏற்றி.வடிவு" "#[ $DistroName" "#] $DistroName" ; துவக்கஏற்றி வடிவு கோப்பிலிருந்து உள்ளீட்டை அகற்று..
  ${LineFind} "$BootDir\01\நிறுவப்பட்டது.உரை" "$BootDir\01\நிறுவப்பட்டது.உரை" "1:-1" "DeleteInstall" ; நிறுவப்பட்ட உள்ளீட்டை அகற்று
  ${LineFind} "$BootDir\01\நிறுவப்பட்டது.உரை" "$BootDir\01\நிறுவப்பட்டது.உரை" "1:-1" "DeleteEmptyLine" ; வெற்று வரிகளில் எஞ்சியவற்றை அகற்று
  ${LineFind} "$BootDir\01\menu\$Config2Use" "$BootDir\01\menu\$Config2Use" "1:-1" "DeleteEmptyLine" ; வெற்று வரிகளில் எஞ்சியவற்றை அகற்று
  ;CopyFiles "$BootDir\01\நிறுவப்பட்டது.உரை" "$BootDir\01\நிறுவப்பட்டது-நகல்.உரை" ; பாதுகாப்பிற்காக நிறுவப்பட்டது காப்புப்பிரதியை உருவாக்கவும்
  RMDir /R "$BootDir\01\$DistroName"
   ${AndIf} ${FileExists} "$BootDir\01\ISOS\$DistroName.iso"   
   Delete "$BootDir\01\ISOS\$DistroName.iso" 
 ${EndIf}
 DetailPrint "$DistroName மற்றும் அதன் மெனு நுழைவு அகற்றப்பட்டது!" 
!macroend