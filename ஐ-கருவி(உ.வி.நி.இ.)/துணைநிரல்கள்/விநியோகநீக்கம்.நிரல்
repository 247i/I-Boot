; ------------ விநியோக நீக்கம் உரை Macro -------------- 

!macro Uninstall_Distros  
; New Methods catch-all
 ${If} $DistroName != ""  
  ${DeleteMenuEntry} "$BootDir\அகர\பகவன்\$Config2Use" "#[ $DistroName" "#] $DistroName" ; கட்டமைப்பு கோப்பிலிருந்து உள்ளீட்டை அகற்று... I.E. linux.cfg, system.cfg, etc
  ${DeleteMenuEntry} "$BootDir\அகர\பகவன்\முதற்றே.உலகு" "#[ $DistroName" "#] $DistroName" ; துவக்கஏற்றி உலகு கோப்பிலிருந்து உள்ளீட்டை அகற்று..
  ${LineFind} "$BootDir\அகர\பகவன்\நிறுவப்பட்டது.உரை" "$BootDir\அகர\பகவன்\நிறுவப்பட்டது.உரை" "1:-1" "DeleteInstall" ; நிறுவப்பட்ட உள்ளீட்டை அகற்று
  ${LineFind} "$BootDir\அகர\பகவன்\நிறுவப்பட்டது.உரை" "$BootDir\அகர\பகவன்\நிறுவப்பட்டது.உரை" "1:-1" "DeleteEmptyLine" ; வெற்று வரிகளில் எஞ்சியவற்றை அகற்று
  ${LineFind} "$BootDir\அகர\பகவன்\$Config2Use" "$BootDir\அகர\பகவன்\$Config2Use" "1:-1" "DeleteEmptyLine" ; வெற்று வரிகளில் எஞ்சியவற்றை அகற்று
  RMDir /R "$BootDir\boot\$DistroName"
   ${AndIf} ${FileExists} "$BootDir\boot\ISOS\$DistroName.iso"   
   Delete "$BootDir\boot\ISOS\$DistroName.iso" 
 ${EndIf}
 DetailPrint "$DistroName மற்றும் அதன் மெனு நுழைவு அகற்றப்பட்டது!" 
!macroend