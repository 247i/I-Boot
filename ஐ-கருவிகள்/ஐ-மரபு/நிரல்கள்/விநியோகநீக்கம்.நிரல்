; ------------ Uninstall Distros Macro -------------- 

!macro Uninstall_Distros  
; New Methods catch-all
 ${If} $DistroName != ""  
  ${DeleteMenuEntry} "$BootDir\!\menu\$DistroPath" "#[ $DistroName" "#] $DistroName" ; கட்டமைப்பு கோப்பிலிருந்து உள்ளீட்டை அகற்று... I.E. linux.cfg, system.cfg, etc
  ${LineFind} "$BootDir\!\நிறுவப்பட்டது.உரை" "$BootDir\!\நிறுவப்பட்டது.உரை" "1:-1" "DeleteInstall" ; நிறுவப்பட்ட உள்ளீட்டை அகற்று
  ${LineFind} "$BootDir\!\நிறுவப்பட்டது.உரை" "$BootDir\!\நிறுவப்பட்டது.உரை" "1:-1" "DeleteEmptyLine" ; வெற்று வரிகளில் எஞ்சியவற்றை அகற்று
  ${LineFind} "$BootDir\!\menu\$DistroPath" "$BootDir\!\menu\$DistroPath" "1:-1" "DeleteEmptyLine" ; வெற்று வரிகளில் எஞ்சியவற்றை அகற்று
  Delete "$BootDir\!\$DistroName\*.*" 
  ReadEnvStr $R0 COMSPEC
  nsExec::Exec '"$R0" /C rmdir /Q /S "$BootDir\!\$DistroName"' 
  RMDir /R "$BootDir\!\$DistroName"
   ${AndIf} ${FileExists} "$BootDir\!\ISOS\$DistroName.iso"   
   Delete "$BootDir\!\ISOS\$DistroName.iso" 
 ${EndIf}
 DetailPrint "$DistroName மற்றும் அதன் மெனு நுழைவு அகற்றப்பட்டது!" 
!macroend